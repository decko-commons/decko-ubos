{
  "type" : "app",

  "info" : {
    "default" : {
      "name" : "Decko",
      "tagline" : "You hold the cards"
    }
  },

  "roles" : {
    "apache2" : {
      "defaultcontext" : "/deck",
      "apache2modules" : [
        "passenger",
        "expires",
        "headers",
        "xsendfile"
      ],
      "wellknown" : {
        "robotstxt" : {
          "disallow" : [
            "/card/*",
            "/create/*",
            "/update/*",
            "/delete/*",
            "/admin/*",
            "/account/*",
            "/*.json"
          ]
        }
      },
      "appconfigitems" : [
        {
          "type" : "file",
          "name" : "${appconfig.apache2.appconfigfragmentfile}",
          "template"     : "tmpl/htaccess.tmpl",
          "templatelang" : "varsubst"
        },
        {
          "type"  : "directory",
          "name"  : "${appconfig.datadir}"
        },
        {
          "type"  : "directorytree",
          "name"  : "files",
          "source"  : "public/files"
        },
        {
          "type": "directorytree",
          "names": [
            "${appconfig.datadir}/.bundle",
            "${appconfig.datadir}/Gemfile",
            "${appconfig.datadir}/Rakefile",
            "${appconfig.datadir}/config",
            "${appconfig.datadir}/script",
            "${appconfig.datadir}/public",
            "${appconfig.datadir}/gems"
          ],
          "source"          : "/usr/share/${package.name}/$2",
          "filepermissions" : "preserve",
          "dirpermissions"  : "preserve"
        },
        {
          "type": "directorytree",
          "names": [
            "${appconfig.datadir}/Gemfile.lock",
            "${appconfig.datadir}/config.ru"
          ],
          "uname" : "${apache2.uname}",
          "gname" : "${apache2.gname}",
          "source"          : "/usr/share/${package.name}/$2"
        },
        {
          "type"  : "file",
          "name"  : "${appconfig.datadir}/config/database.yml",
          "template"     : "tmpl/database.yml.tmpl",
          "templatelang" : "varsubst"
        },
        {
          "type"  : "file",
          "name"  : "${appconfig.datadir}/config/application.rb",
          "template"      : "tmpl/application.rb.tmpl",
          "templatelang"  : "varsubst"
        },
        {
          "type"  : "symlink",
          "name"  : "${appconfig.datadir}/log",
          "source"  : "/var/log/${package.name}/${appconfig.appconfigid}"
        },
        {
          "type"  : "directory",
          "uname" : "${apache2.uname}",
          "gname" : "${apache2.gname}",
          "mode"  : "0755",
          "name"  : "${appconfig.datadir}/files",
          "retentionpolicy": "keep",
          "retentionbucket": "uploads"
        },
        {
          "type"  : "directory",
          "uname" : "${apache2.uname}",
          "gname" : "${apache2.gname}",
          "mode"  : "0755",
          "name"  : "${appconfig.datadir}/tmp"
        },
        {
          "type"  : "systemd-service",
          "name"  : "memcached"
        }
      ],
      "installers" : [
        {
          "type"  : "perlscript",
          "source"  : "/usr/share/decko/ubos_cards.pl"
        }
      ],
      "upgraders" : [
        {
          "type"  : "perlscript",
          "source"  : "/usr/share/decko/ubos_cards.pl"
        }
      ]
    },

    "mysql" : {
      "appconfigitems": [
        {
          "type": "database",
          "name": "maindb",
          "retentionpolicy": "keep",
          "retentionbucket": "maindb",
          "privileges": "create, alter, drop, index, select, insert, update, delete"
        }
      ]
    }
  },

  "customizationpoints" : {
    "recaptcha_public_key" : {
      "name"     : "ReCaptcha Public Key",
      "type"     : "string",
      "required" : false,
      "default"  : {
        "value" : ""
      }
    },
    "recaptcha_private_key" : {
      "name"     : "ReCaptcha Private Key",
      "type"     : "string",
      "required" : false,
      "default"  : {
        "value" : ""
      }
    },
    "sender_email" : {
      "name"     : "Sender e-mail address",
      "type"     : "email",
      "required" : true
    }
  }
}
